# .editorconfig
# This file helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# For more information, visit https://editorconfig.org

# Set as the root of the project.
root = true

# General settings for all file types
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Specific settings for YAML files
[*.{yml,yaml}]
indent_size = 2

# Specific settings for Makefile
# Makefiles require tabs for indentation in recipes.
[Makefile]
indent_style = tab

# Specific settings for Markdown files
# It can be useful to allow trailing whitespace in Markdown for line breaks.
[*.md]
trim_trailing_whitespace = false
